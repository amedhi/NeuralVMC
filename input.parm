#----------------------------------------------------------------------
#                       ~~~My program~~~                           
#                       Input Parameters                             
#-----------------------------------------------------------------------
#---------------------------------------------
# Job Specification 
#---------------------------------------------
job = "VMC Simulation" 
optimizing_run = "YES"
mode = "NEW" # ("NEW"/"APPEND")
print_level = -2 #-2
prefix = "./hub_chain"
#---------------------------------------------
# Lattice:
#---------------------------------------------
lattice = "CHAIN" 
lsize1 = 8
bc1 = "periodic"

#---------------------------------------------
# Model:
#---------------------------------------------
model = "HUBBARD"
t = 1.0
U = 0.0

#---------------------------------------------
# Variational wavefunction
#---------------------------------------------
wavefunction = "IDENTITY"
#wavefunction = "FERMISEA"
#nqs_wf = "FFNN"
nqs_wf = "FFNN_SIGN"
#nqs_wf = "FFNN_CMPL"
#nqs_wf = "SymFFNN"
gutzwiller_proj = "NO"
hole_doping = 0.0
#delta_sc = 0.08
#gfactor = 0.3037
#mu = -0.4263
as_func_of = "hole_doping"
load_parms_from_file = "NO"
parms_load_path="./hub_chain"
parms_save_path="./hub_chain"
#---------------------------------------------
# List of observable to calculate:
#---------------------------------------------
Energy = "YES"
EnergyGradient = "NO"
Magnetization = "NO"
MomentumOccupancy = "NO"

#---------------------------------------------
# Monte Carlo parameters
#---------------------------------------------
rng_seed = 0  # (=0 No seed, >0 time_seed)
measure_steps = 5000
warmup_steps = 5000
min_interval = 3
max_interval = 20

#---------------------------------------------
# Optimization parameters
#---------------------------------------------
sr_progress_stdout = "YES"
sr_progress_log = "YES"
sr_opt_samples = 1
sr_max_iter = 200
sr_stabilizer = 0.0001
sr_start_tstep = 0.2
sr_svd_cut = 0.0001
sr_gradtol = 0.0001
