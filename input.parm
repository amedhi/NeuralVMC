#----------------------------------------------------------------------
#                       ~~~My program~~~                           
#                       Input Parameters                             
#-----------------------------------------------------------------------
#---------------------------------------------
# Job Specification 
#---------------------------------------------
job = "VMC Simulation" 
optimizing_run = "YES" # "YES" 
mode = "NEW" # ("NEW"/"APPEND")
print_level = -2 #-2
prefix = "hub_chain"
#---------------------------------------------
# Lattice:
#---------------------------------------------
lattice = "CHAIN" # "SQUARE" 
lsize1 = 10
lsize2 = 4
bc1 = "periodic"
bc2 = "periodic"

#---------------------------------------------
# Model:
#---------------------------------------------
model = "HUBBARD"
t = 1.0
U = 0.0

#---------------------------------------------
# Variational wavefunction
#---------------------------------------------
wavefunction = "IDENTITY"
nqs_wf = "FFNN"
gutzwiller_proj = "NO"
hole_doping = 0.0 
#delta_sc = 0.08
#gfactor = 0.3037
#mu = -0.4263
as_func_of = "hole_doping"

#---------------------------------------------
# List of observable to calculate:
#---------------------------------------------
Energy = "Yes"
EnergyGradient = "YES"
Magnetization = "No"

#---------------------------------------------
# Monte Carlo parameters
#---------------------------------------------
rng_seed = 0  # (=0 No seed, >0 time_seed)
measure_steps = 5000
warmup_steps = 5000
min_interval = 2
max_interval = 20

#---------------------------------------------
# Optimization parameters
#---------------------------------------------
sr_progress_stdout = 'YES'
sr_progress_log = 'NO'
sr_measure_steps = 5000
sr_opt_samples = 6
sr_max_iter = 200
sr_start_tstep = 0.1
sr_flat_tail_len = 20
sr_random_start = 'YES'
sr_rslope_tol = 1.0E-2
sr_aslope_tol = 1.0E-5






